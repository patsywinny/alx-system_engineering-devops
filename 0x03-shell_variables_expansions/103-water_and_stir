#!/bin/bash


decode() {
  local input=$1
  local base_chars=$2
  local base=${#base_chars}
  local i val digit

  val=0
  for (( i=0; i<${#input}; i++ )); do
    char="${input:$i:1}"
    digit=$(expr index "$base_chars" "$char")
    (( digit-- ))  # Convert from 1-based to 0-based index
    val=$(( val * base + digit ))
  done
  echo $val
}

encode() {
  local number=$1
  local base_chars=$2
  local base=${#base_chars}
  local result=""

  while (( number > 0 )); do
    remainder=$(( number % base ))
    result="${base_chars:$remainder:1}$result"
    number=$(( number / base ))
  done

  echo "${result:-${base_chars:0:1}}"
}

# Decode both values
w_dec=$(decode "$WATER" "water")
s_dec=$(decode "$STIR" "tir.")

# Add the numbers
sum=$(( w_dec + s_dec ))

# Encode to bestchol
encode "$sum" "bestchol"